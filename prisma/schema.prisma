// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
}

generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
}

model Guild {
  id          Int    @id @default(autoincrement())
  snowflakeId String @unique
  name        String

  channels    Channel[]
  invocations Invocation[]
  quotes      Quote[]
}

model User {
  id          Int    @id @default(autoincrement())
  snowflakeId String @unique
  name        String

  invocations Invocation[]
  quotes      Quote[]
  submissions Quote[]      @relation("Submitter")
}

model Channel {
  id          Int    @id @default(autoincrement())
  snowflakeId String @unique
  name        String
  guild       Guild  @relation(fields: [guildId], references: [id])
  guildId     Int

  invocations Invocation[]
  quotes      Quote[]
}

model Invocation {
  id              Int            @id @default(autoincrement())
  invokedAt       DateTime       @default(now())
  user            User           @relation(fields: [userId], references: [id])
  guild           Guild?         @relation(fields: [guildId], references: [id])
  channel         Channel?       @relation(fields: [channelId], references: [id])
  reactionImage   ReactionImage? @relation(fields: [reactionImageId], references: [id])
  userId          Int
  guildId         Int?
  channelId       Int?
  reactionImageId Int?
}

model ReactionCategory {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  reactionImages ReactionImage[]
}

model ReactionImage {
  id         Int              @id @default(autoincrement())
  name       String
  category   ReactionCategory @relation(fields: [categoryId], references: [id])
  categoryId Int
  url        String
  invocations Invocation[]
}

model Quote {
  id          Int      @id @default(autoincrement())
  messageId   String   @unique
  createdAt   DateTime
  submittedAt DateTime @default(now())
  content     String
  user        User     @relation(fields: [userId], references: [id])
  submitter   User     @relation(name: "Submitter", fields: [submitterId], references: [id])
  guild       Guild    @relation(fields: [guildId], references: [id])
  channel     Channel  @relation(fields: [channelId], references: [id])
  userId      Int
  submitterId Int
  guildId     Int
  channelId   Int
}
