// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
}

generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "esm"
  engineType   = "client"
}

model Guild {
  id          Int          @id @default(autoincrement())
  addedAt     DateTime     @default(now())
  snowflakeId String       @unique
  name        String
  channels    Channel[]
  invocations Invocation[]
  quotes      Quote[]
}

model User {
  id          Int          @id @default(autoincrement())
  snowflakeId String       @unique
  username    String
  displayName String
  invocations Invocation[]
  quotes      Quote[]
  submissions Quote[]      @relation("Submitter")
}

model Channel {
  id          Int          @id @default(autoincrement())
  snowflakeId String       @unique
  guildId     Int
  name        String
  guild       Guild        @relation(fields: [guildId], references: [id])
  invocations Invocation[]
  quotes      Quote[]
}

model Command {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String?
  invocations Invocation[]
}

model Invocation {
  id              Int      @id @default(autoincrement())
  invokedAt       DateTime @default(now())
  commandId       Int
  userId          Int
  guildId         Int?
  channelId       Int?
  reactionImageId Int?
  command         Command  @relation(fields: [commandId], references: [id])
  user            User     @relation(fields: [userId], references: [id])
  guild           Guild?   @relation(fields: [guildId], references: [id], onUpdate: NoAction, onDelete: NoAction)
  channel         Channel? @relation(fields: [channelId], references: [id], onUpdate: SetNull, onDelete: SetNull)
  reactionImage   Image?   @relation(fields: [reactionImageId], references: [id], onUpdate: NoAction, onDelete: NoAction)
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Image {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  categoryId  Int
  name        String?
  stem        String?
  category    Category     @relation(fields: [categoryId], references: [id])
  invocations Invocation[]
}

model Quote {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime
  submittedAt DateTime @default(now())
  messageId   String   @unique
  userId      Int
  submitterId Int
  guildId     Int
  channelId   Int
  content     String
  user        User     @relation(fields: [userId], references: [id], onUpdate: NoAction)
  submitter   User     @relation(name: "Submitter", fields: [submitterId], references: [id], onUpdate: NoAction)
  guild       Guild    @relation(fields: [guildId], references: [id], onUpdate: NoAction)
  channel     Channel  @relation(fields: [channelId], references: [id], onUpdate: NoAction)
}
