// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
}

generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

model Guild {
  id          Int    @id @default(autoincrement())
  snowflakeId String @unique
  name        String

  channels    Channel[]
  invocations Invocation[]
  quotes      Quote[]
}

model User {
  id          Int    @id @default(autoincrement())
  snowflakeId String @unique
  name        String

  invocations Invocation[]
  quotes      Quote[]
  submissions Quote[]      @relation("Submitter")
}

model Channel {
  id          Int    @id @default(autoincrement())
  snowflakeId String @unique
  guildId     Int
  name        String

  guild       Guild        @relation(fields: [guildId], references: [id])
  invocations Invocation[]
  quotes      Quote[]
}

model Command {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  invocations Invocation[]
}

model Invocation {
  id              Int      @id @default(autoincrement())
  invokedAt       DateTime @default(now())
  command         Command  @relation(fields: [commandId], references: [id])
  user            User     @relation(fields: [userId], references: [id])
  guild           Guild?   @relation(fields: [guildId], references: [id])
  channel         Channel? @relation(fields: [channelId], references: [id])
  reactionImage   Image?   @relation(fields: [reactionImageId], references: [id])
  commandId       Int
  userId          Int
  guildId         Int?
  channelId       Int?
  reactionImageId Int?
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Image {
  id         Int    @id @default(autoincrement())
  name       String
  categoryId Int
  url        String

  category    Category     @relation(fields: [categoryId], references: [id])
  invocations Invocation[]
}

model Quote {
  id          Int      @id @default(autoincrement())
  messageId   String   @unique
  createdAt   DateTime
  submittedAt DateTime @default(now())
  content     String
  userId      Int
  submitterId Int
  guildId     Int
  channelId   Int
  user        User     @relation(fields: [userId], references: [id])
  submitter   User     @relation(name: "Submitter", fields: [submitterId], references: [id])
  guild       Guild    @relation(fields: [guildId], references: [id])
  channel     Channel  @relation(fields: [channelId], references: [id])
}
