// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guild {
  id   String @id
  name String

  channels    Channel[]
  invocations Invocation[]
  quotes      Quote[]
}

model User {
  id          String       @id
  name        String
  invocations Invocation[]
  quotes      Quote[]
  submissions Quote[]      @relation("Submitter")
}

model Channel {
  id          String       @id
  name        String
  guild       Guild        @relation(fields: [guildId], references: [id])
  guildId     String
  invocations Invocation[]
  quotes      Quote[]
}

/// Specific category of a reaction.
model ReactionType {
  id     Int             @id @default(autoincrement())
  name   String
  slug   String          @unique
  images ReactionImage[]
}

/// Image of a reaction belonging to a category.
model ReactionImage {
  id          Int          @id @default(autoincrement())
  categoryId  Int
  name        String?
  url         String
  count       Int          @default(0)
  category    ReactionType @relation(fields: [categoryId], references: [id])
  invocations Invocation[]
}

model Invocation {
  id        Int            @id @default(autoincrement())
  invokedAt DateTime       @default(now())
  user      User           @relation(fields: [userId], references: [id])
  guild     Guild?         @relation(fields: [guildId], references: [id])
  channel   Channel?       @relation(fields: [channelId], references: [id])
  userId    String
  guildId   String?
  channelId String?
  image     ReactionImage? @relation(fields: [imageId], references: [id])
  imageId   Int?
}

model Quote {
  id          Int      @id @default(autoincrement())
  messageId   String   @unique
  createdAt   DateTime
  submittedAt DateTime @default(now())
  content     String
  user        User     @relation(fields: [userId], references: [id])
  submitter   User     @relation(name: "Submitter", fields: [submitterId], references: [id])
  guild       Guild    @relation(fields: [guildId], references: [id])
  channel     Channel  @relation(fields: [channelId], references: [id])
  userId      String
  submitterId String
  guildId     String
  channelId   String
}
